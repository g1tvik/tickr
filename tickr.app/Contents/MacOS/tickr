#!/bin/bash

# Get the directory where this app bundle is located
APP_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../../.." && pwd)"

# Change to the tickr directory
cd "$APP_DIR"

# Check if we're in the right directory
if [ ! -f "start-tickr.js" ]; then
    osascript -e 'display dialog "Error: Cannot find start-tickr.js in the current directory" buttons {"OK"} default button "OK" with icon stop'
    exit 1
fi

# Use the existing .command file approach which is more reliable
open -a Terminal "$APP_DIR/tickr-launcher.command"
